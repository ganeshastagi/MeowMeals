<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckoutActivity"
    android:background="@color/cyan">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp"
            android:background="@color/LightCyan">

            <TextView
                android:id="@+id/logo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aclonica"
                android:text="@string/meow_meals"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/checkout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkout"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="name"
            android:inputType="textPersonName"
            android:hint="@string/full_name"
            android:padding="8dp"
            android:background="@android:drawable/edit_text"/>

        <EditText
            android:id="@+id/apt_building_No"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="postalAddress"
            android:hint="@string/apt_building_no"
            android:inputType="textPostalAddress"
            android:padding="8dp"
            android:background="@android:drawable/edit_text"/>

        <EditText
            android:id="@+id/street_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="postalAddress"
            android:hint="@string/street_address"
            android:inputType="textPostalAddress"
            android:padding="8dp"
            android:background="@android:drawable/edit_text"/>

        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="postalAddress"
            android:hint="@string/city_province"
            android:inputType="textPostalAddress"
            android:padding="8dp"
            android:background="@android:drawable/edit_text"/>

        <EditText
            android:id="@+id/pin_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/postal_code"
            android:padding="8dp"
            android:maxLength="6"
            android:background="@android:drawable/edit_text"/>

        <EditText
            android:id="@+id/email1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="emailAddress"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:background="@android:drawable/edit_text"/>

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="phone"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:maxLength="10"
            android:padding="8dp"
            android:background="@android:drawable/edit_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payment_options"
            android:textSize="16sp"
            android:padding="8dp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/btn_default"/>

        <RadioGroup
            android:id="@+id/payment_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/credit_debit_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/credit_debit_card"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@color/light_gray"
                android:paddingHorizontal="16dp" />

            <RadioButton
                android:id="@+id/payment_portal_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment_portal"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@color/LightCyan"
                android:paddingHorizontal="16dp"/>
        </RadioGroup>

        <LinearLayout
            android:id="@+id/credit_debit_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/card_holder_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="name"
                android:hint="@string/card_holder_name"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:background="@android:drawable/edit_text"/>

            <EditText
                android:id="@+id/card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="creditCardNumber"
                android:hint="@string/card_number"
                android:inputType="number"
                android:maxLength="16"
                android:padding="8dp"
                android:background="@android:drawable/edit_text"/>

            <EditText
                android:id="@+id/card_expiry"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:autofillHints="creditCardExpirationDate"
                android:hint="@string/mm_yy"
                android:inputType="number"
                android:padding="8dp"
                android:maxLength="4"
                android:background="@android:drawable/edit_text"/>

            <EditText
                android:id="@+id/card_cvv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:autofillHints="creditCardSecurityCode"
                android:hint="@string/cvv"
                android:inputType="numberPassword"
                android:maxLength="3"
                android:padding="8dp"
                android:background="@android:drawable/edit_text"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/payment_portal_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/payment_portal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/https_meowmeals_com_payments"
                android:textSize="16sp"
                android:padding="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@color/white"/>
        </LinearLayout>

        <Button
            android:id="@+id/submit_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit_order"
            android:backgroundTint="@color/cyan"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>